backgroundColor1= #fecd43
backgroundColor2= #fdfdfd
accent1= #FC4A1A
mutedAccent= #4ABDAC

body
  font-family -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif
  margin 0
  padding 0
  background-color backgroundColor1
  line-height 1.5
  min-height 100vh
  //box-shadow inset 3px 3px 30px rgba(0,0,0,0.3)
  font-size 16px

siteMargin = 3em

$spider
  position absolute
  top siteMargin
  left siteMargin
  bottom siteMargin
  right siteMargin

$wrapper
  max-width 960px
  margin-left auto
  margin-right auto
  padding 0 2em

h1, h2, h3, h4, h5, .title
  font-family Stylish

h4
  font-size 1.2em
h3
  font-size 1.5em
h2
  font-size 2em
h1
  font-size 2.6em

code
  color accent1
  line-height 1
  background #eee
  padding .1em
  font-size 14px

a
  color mutedAccent
  &:hover
    color accent1

img
  max-width 100%

.button, &[type="submit"], button
  padding .6em .8em
  text-decoration none
  border-radius 2px
  transition all 0.2s
  box-sizing content-box
  text-align center
  vertical-align middle
  cursor pointer
  font-weight bold
  position relative
  display inline-block
  font-size .9em
  background-image linear-gradient(to bottom, rgba(255,255,255,.1) 25%,rgba(255,255,255,0) 90%, rgba(0, 0, 0,.05) )
  box-shadow inset 0 0 0 1px rgba(0,0,0,.1), 1px 1px 3px rgba(0,0,0,.3)
  color white
  background-color hotpink
  &:hover
    background-image linear-gradient(to bottom, rgba(255,255,255,.1) 25%,rgba(255,255,255,0) 80%, rgba(0, 0, 0,.1) )
    box-shadow inset 0 0 0 1px rgba(0,0,0,.2), 1px 1px 3px rgba(0,0,0,.3)
    color white
  &:active
    box-shadow inset 0 0 0 1px rgba(0,0,0,.2)
    color white
  > *
    margin-left .3em
  > *:nth-child(1)
    margin-left 0

.tags-list
  > * 
    margin-top .3em
    margin-left .3em
  > *:nth-child(1)
    margin-left 0

$card
  padding 10px
  width 290px
  & [class*="-content "], & [class$="-content"]
    border 2px solid #f5f5f5
    padding 0 0 40px 0
  & [class*="-cover "], & [class$="-cover"]
    width 100%
  & [class*="-title "], & [class$="-title"]
    margin 0 auto
    padding 15px 35px 0
  & [class*="-title-link "], & [class$="-title-link"]
    text-decoration none
  & [class*="-body "], & [class$="-body"]
    padding 35px
  & [class*="-read-more "], & [class$="-read-more"]
    text-decoration none
    padding 0 35px
    &:after
      content: '->'

