backgroundColor1= #fecd43
backgroundColor2= #fdfdfd
accent1= #FC4A1A
mutedAccent= #4ABDAC

body
  font-family -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif
  margin 0
  padding 0
  background-color backgroundColor1
  line-height 1.5
  min-height 100vh
  //box-shadow inset 3px 3px 30px rgba(0,0,0,0.3)
  font-size 16px

siteMargin = 3em

$spider
  position absolute
  top siteMargin
  left siteMargin
  bottom siteMargin
  right siteMargin

$wrapper
  max-width 760px
  margin-left auto
  margin-right auto
  padding 0 2em

h1, h2, h3, h4, h5, .title
  font-family Stylish

h4
  font-size 1.2em
h3
  font-size 1.5em
h2
  font-size 2em
h1
  font-size 2.6em

code
  color accent1
  line-height 1
  background #eee
  padding .1em
  font-size 14px

a
  color mutedAccent
  &:hover
    color accent1
